{
  "Resources": {
    "HeartbeatLambdasRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [{
            "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
          }]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName" : "Heartbeat-SESPolicy",
            "PolicyDocument": {
              "Version" : "2012-10-17",
              "Statement": [{
                "Sid": "Stmt1484465713428",
                "Action": "ses:*",
                "Effect": "Allow",
                "Resource": "*"
              }]
            }
          },
          {
            "PolicyName" : "Heartbeat-DynamoPolicy",
            "PolicyDocument": {
              "Version" : "2012-10-17",
              "Statement": [
                {
                  "Sid": "Stmt1484474870000",
                  "Action": "dynamodb:*",
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "ApiGwRole" : {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [{
            "Effect": "Allow",
              "Principal": {
                "Service": "apigateway.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
          }]
        },
        "Policies": [ 
          {
            "PolicyName": "Heartbeat-LambdaPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "lambda:InvokeFunction",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "HeartBeatTable" : {
      "Type" : "AWS::DynamoDB::Table",
      "Properties" : {
        "TableName" : "heartbeats",
        "AttributeDefinitions" : [{
              "AttributeName" : "user",
              "AttributeType" : "S"
            },{
              "AttributeName" : "id",
              "AttributeType" : "S"
            }
        ],
        "KeySchema" : [{
            "AttributeName" : "user",
            "KeyType" : "HASH"
          },{
            "AttributeName" : "id",
            "KeyType" : "RANGE"
          }
        ],
        "ProvisionedThroughput" : {
          "ReadCapacityUnits" : 1,
          "WriteCapacityUnits" : 1
        }       
      }
    },
    "RecordHeartbeatLambda": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Handler": "recordHeartbeat.handler",
        "Role": { "Fn::GetAtt" : ["HeartbeatLambdasRole", "Arn"] },
        "Code": {
          "S3Bucket": "viktor-heartbeat",
          "S3Key": "recordHeartbeat.zip"
        },
        "Runtime": "nodejs4.3",
        "Timeout": "25"
      }
    },
    "CheckHeartbeatLambda": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Handler": "checkHeartbeat.handler",
        "Role": { "Fn::GetAtt" : ["HeartbeatLambdasRole", "Arn"] },
        "Code": {
          "S3Bucket": "viktor-heartbeat",
          "S3Key": "checkHeartbeat.zip"
        },
        "Runtime": "nodejs4.3",
        "Timeout": "25"
      }
    },
    "HearbeatRestAPi": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "Body": {
          "swagger": "2.0",
          "info": {
            "version": "1.0.0",
            "title": "Heartbeat",
            "description": "Heartbeat API for recording hearbeats",
            "termsOfService": "TODO",
            "contact": {
              "name": "TODO"
            },
            "license": {
              "name": "MIT"
            }
          },
          "host": "TODO",
          "basePath": "/api",
          "schemes": [
            "http"
          ],
          "consumes": [
            "application/json"
          ],
          "produces": [
            "application/json"
          ],
          "paths": {
            "/record_heartbeat": {
              "post": {
                "description": "Record a heartbeat",
                "produces": [
                  "application/json"
                ],
                "responses": {
                  "200": {
                    "description": "Heartbeat was recorded.",
                    "schema": {
                      "type": "object",
                      "items": {
                        "$ref": "#/definitions/RecordHeartbeatResponse"
                      }
                    }
                  }
                },
                "x-amazon-apigateway-integration": {
                  "type": "aws",
                  "credentials": {"Fn::GetAtt" : ["ApiGwRole", "Arn"] },
                  "httpMethod": "POST",
                  "uri": {"Fn::Join" : [
                      "",
                      [
                        "arn:aws:apigateway:",
                        {"Ref": "AWS::Region"},
                        ":lambda:path/2015-03-31/functions/",
                        {"Fn::GetAtt": ["RecordHeartbeatLambda", "Arn"]},
                        "/invocations"
                      ]
                    ]
                  },
                  "requestTemplates": {
                    "application/json": "$input.json('$')"
                  },
                  "responses": {
                    "default": {
                      "responseTemplates": {
                        "application/json": "$input.json('$.bodyJson')}"
                      },
                      "statusCode": "200"
                    }
                  }
                }
              }
            }
          },
          "definitions": {
            "RecordHeartbeatRespose": {
              "type": "object",
              "required": [
                "status"
              ],
              "properties": {
                "status": {
                  "type": "string"
                }
              }
            }
          }
        },
        "Description": "Heartbeat API",
        "Name": "HeartbeatRestApi"
      }
    }
  }
}
